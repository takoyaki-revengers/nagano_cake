<div class="container">
  <div class="row">
    <div class="col-3 mb-5 offset-1">
      <h5 class="text-center bg-light mt-3"><%= @customer.family_name %> <%= @customer.first_name %>さんの会員詳細</h5>
    </div>
  </div>

    <div class="row mb">
      <div class="col-8 mb-2 mx-auto">
        <table class="table">
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.family_name %> <%= @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.post_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @customer.is_deletd == false %>
               <p class="text-success">有効会員</p>
              <% else %>
               <p class="text-secondary">退会</p>
              <% end %>
            </th>
          </tr>
        </table>
      </div>

      <div class="col-10 my-5 mx-auto">
        <tr class="text-center">
          <th><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success offset-4" %></th>
          <th><%= link_to "注文履歴一覧を見る", admin_orders_path(@customer), class: "btn btn-primary offset-1" %></th>
        </tr>
      </div>

    </div>
</div>