<div class="conteiner">

  <div class="row">
    <div class="col-4 mt-5 offset-2">
      <h5 class="text-center bg-light"><%= @customer.family_name %><%= @customer.first_name %>さんの情報</h5>
    </div>
  </div>

  <div class="row offset-3">
    <div class="col-11 mt-3">
      <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
       <form>
         <div class="form-group col-xs-9">
           <%= f.label :id,"会員ID", class: "col-sm-2" %>
           <%= @customer.id %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :氏名, class: "col-sm-2" %>
           <%= f.text_field :family_name,autofocus: true %>
           <%= f.text_field :first_name %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :フリガナ, class: "col-sm-2" %>
           <%= f.text_field :family_name_kana %>
           <%= f.text_field :first_name_kana %>
         </div>
         <div class=form-group "col-xs-9">
           <%= f.label :郵便番号, class: "col-sm-2" %>
           <%= f.text_field :post_code %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :住所, class: "col-sm-2" %>
           <%= f.text_field :address, class: "col-sm-7" %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :電話番号, class: "col-sm-2" %>
           <%= f.text_field :telephone %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :メールアドレス, class: "col-sm-2" %>
           <%= f.text_field :email %>
         </div>
         <div class="form-group col-xs-9">
           <%= f.label :会員ステータス, class: "col-sm-2" %>
           <%= f.radio_button :is_deletd, false %>
           <%= f.label :会員ステータス, "有効", value: false %>
           <%= f.radio_button :is_deletd, true %>
           <%= f.label :会員ステータス, '退会', value: true %>
         </div>
         <div class="form-group my-5">
           <%= f.submit "変更を保存", class: "btn btn-success offset-3" %>
         </div>
       </form>
      <% end %>
    </div>
  </div>

</div>