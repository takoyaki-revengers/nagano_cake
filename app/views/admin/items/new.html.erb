<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-2">
      <h4 class="bg-light my-5 text-center">商品新規登録</h4>
    </div>
  </div>

  <div class="row  mx-auto">
    <div class="col-md-8 offset-md-4">
      <%= form_with model: @item,url: admin_items_path,local:true do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, placeholder: "商品名" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: '--選択してください--'} %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price, placeholder: "1000" %>円
      </div>

      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :販売ステータス, '販売中', value: true %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :販売ステータス, "販売停止中", value: false %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録",class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>