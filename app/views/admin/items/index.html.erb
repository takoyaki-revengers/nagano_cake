<div class="container">
  <div class="row">
    <div class="col-md-3">
     <h2>商品一覧</h2>

      <%= link_to new_admin_item_path do %>
      <button class="btn btn-warning btn-circle btn-circle-sm m-1">+</button>
      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
         <%= @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_pash(book) %></td>
            <td><%= item.price %></td>
            <td><%= item.genres.name %></td>
            <td><%= item.is_active %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
 </div>
</div>