<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-2 my-5">
     <h4 class="bg-light text-center col-2">商品一覧</h4>
     <%= link_to new_admin_item_path, class: "justify-content-end offset-md-7" do %>
      <i class="fa-light fa-circle-plus"></i>
      <% end %>
     </div>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead>
          <tr  class="bg-light">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
         <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <%if item.is_active == true %>
            <td class="font-weight-bold text-success">販売中</td>
            <% else %>
            <td class="font-weight-bold text-secondary">販売停止中</td>
            <% end %>

          </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
 </div>
</div>