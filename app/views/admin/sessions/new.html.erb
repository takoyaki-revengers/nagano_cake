<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="bg-light  text-center my-5">管理者ログイン</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2 mx-auto d-block">
      <%= form_with model:@admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :"メールアドレス",class: "col-3" %>
          <%= f.email_field :email, autofocus: true,placeholder: "sample@example.com", autocomplete: "email",size: "35",class: "mt-3" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード",class: "col-3" %>
          <%= f.password_field :password, autocomplete: "current-password",size: "35",class: "mt-3" %>
        </div>

      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-info col-2 offset-3 mt-3" %>
      </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>