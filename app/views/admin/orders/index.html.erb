<div class="container">
  <div class="row">
    <div class="col-2 offset-1">
      <h4 class="bg-light  text-center my-5">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-9 mx-auto">
      <table class="table">
        <thead>
          <tr  class="bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>税抜価格</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
         <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at,admin_order_path(order) %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.amount %></td>
            <td><%= order.status %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>