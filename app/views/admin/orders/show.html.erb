<div class="container">

  <div class="row">
    <div class="col-3">
      <h5 class="text-center mt-5">注文履歴の詳細</h5>
    </div>
     <div class="col-12 mt-3">
       <table class="col-6">
         <tr>
           <th>購入者</th>
           <td>
             <%= link_to admin_customer_path(@order.customer), class: "text-dark" do %>
               <%= @order.customer.family_name %><%= @order.customer.first_name %>
             <% end %>
           </td>
         </tr>
         <tr>
           <th>注文日</th>
           <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
         </tr>
         <tr>
           <th>配送先</th>
           <td>
             〒<%= @order.post_code %>
             <%= @order.address %>
           </td>
         </tr>
         <tr>
           <th>宛名</th>
           <td>
             <%= @order.name %>
           </td>
         </tr>
         <tr>
           <th>支払方法</th>
           <td><%= @order.payment_method %></td>
         </tr>
         <tr>
           <th>注文ステータス</th>
           <td>
             <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
               <%= f.select :status, Order.statuses.keys %>
               <%= f.submit "更新", class: "btn btn-success" %>
             <% end %>
           </td>
         </tr>
       </table>
     </div>
  </div>

  <div class="row mt-4">

    <div class="col-8">
      <table class="table">
        <thead class="table-active">
          <tr class="bg-light">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited) %></td>
           <%= form_with(model:[@order, order_detail], url: admin_order_detail_path(order_id: @order.id, id: order_detail.id), method: :patch, local: true) do |f| %>
            <td>
              <%= f.select :making_status, OrderDetail.making_statuses.keys %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
           <% end %>
          </tr>
           <% @sum += order_detail.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table class="col-7 mt-auto offset-1">
        <tr>
          <th class="pb-2">商品合計</th>
          <td><%= @sum.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th class="pb-2">送料</th>
          <td><%= @order.shipping_cost.to_s %>円</td>
        </tr>
        <tr>
          <th class="pb-2">請求合計額</th>
          　<% @sum += @order.shipping_cost %>
          　<td><%= @sum.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>

  </div>

</div>
