<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center">ジャンル一覧・追加</h5>
    </div>
  </div>

<div class="row">
  <div class="col-5 mb-5">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
     <%= f.label :ジャンル名, class: "font-weight-bold" %>
     <%= f.text_field :name, placeholder: "ジャンル名", class: "offset-1" %>
     <%= f.submit "新規登録", class: "btn btn-success offset-1" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-5 mb-5">
    <table class="col-5 mb-5">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.name %></td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success offset-6" %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
   </div>
 </div>
</div>