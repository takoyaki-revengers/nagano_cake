<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1">
      <h4 class="bg-light my-5 text-center">注文情報確認</h4>
      
    </div>
  </div>
  <div class="row">
      <div class="col-sm-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-active">商品名</th>
              <th class="table-active">単価（税込）</th>
              <th class="table-active">数量</th>
              <th class="table-active">小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= cart_item.item.name %></td>
                <td>¥<%= (cart_item.item.add_tax_price).to_s(:delimited) %>－</td>
                <td><%= cart_item.amount %>個</td>
                <td>¥<%= (cart_item.item.add_tax_price * cart_item.amount).to_s(:delimited) %>－</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-sm-4">
        <table class="table table-bordered">
          <%= form_with model: @order, url:orders_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :customer_id, value: @customer %>
          <tbody>
            <tr>
              <td class="table-active">送料</td>
              <td>¥<%= @shipping_cost.to_s(:delimited) %>－</td>
                  <%= f.hidden_field :shipping_cost, value: @shipping_cost %>
            </tr>
            <tr>
              <td class="table-active">商品合計</td>
              <td>¥<%= @total.to_s(:delimited) %>－</td>
            </tr>
            <tr>
              <td class="table-active">請求合計</td>
              <td>¥<%= @total_price.to_s(:delimited) %>－</td>
                  <%= f.hidden_field :total_payment, value: @total_price %>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-sm-2 mt-3">
        <h5>支払方法</h5>
      </div>

      <div class="col-sm-10 mt-3">
        <%= @order.payment_method %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %></br>
      </div>

      <div class="col-sm-2 mt-3">
        <h5>お届け先</h5>
      </div>
      <div class="col-sm-10 mt-3">
        〒<%= @order.post_code %>&emsp;<%= @order.address %></br>
          <%= @order.name %>
        <%= f.hidden_field :post_code, value: @order.post_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
      </div>
    </div>

    <div class="row mt-5 justify-content-center">
      <div class="col-2 mx-3">
        <%= f.submit "注文を確定する", class: "btn btn-success " %>
      </div>
    </div>

    <% end %>
</div>
