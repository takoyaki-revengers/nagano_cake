<div class="container">
    <div class="col-md-3 offset-md-1">
      <h5 class="bg-light my-4 text-center">注文履歴一覧</h5>
    </div>

  <table class="table table-bordered">
    <thead>
        <tr>
          <th class="table-active">注文日</th>
          <th class="table-active">配送先</th>
          <th class="table-active">注文商品</th>
          <th class="table-active">支払金額</th>
          <th class="table-active">ステータス</th>
          <th class="table-active">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <p>〒<%= order.post_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </p>
              </td>
              <td>
                <% order.order_details.all.each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td>¥<%= order.total_payment.to_s(:delimited) %>－</td>
              <td><%= order.status %></td>
              <td>
              <%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
      <%= paginate(@orders) %>
  </div>
</div>