<div class="container">
  <div class="row">
    <div class="col-md-10 sm-12">
      <h2>ショッピングカート</h2>
      <table class="table table-bordered">
        <tr class="table-active">
          <th class="text-left">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>

      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%# cart_item.price %></td>
          <td><%= cart_item.amount %></td>
          <td></td>
          <td>削除する</td>
        </tr>
      <% end %>
      </table>

      <table class="table table-bordered">
        <tr>
          <th class="table-active">合計金額</th>
          <td></td>
        </tr>
      </table>


    </div>
  </div>
</div>

