<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>新規会員登録</h2>

    <%= form_with model:@customers, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

     <div class="field">
      <%= f.label "名前" %>
      <%= f.label "(姓)", class:"col-md-3" %>
      <%= f.text_field :family_name %>
      <%= f.label "(名)" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label "フリガナ" %>
      <%= f.label "(セイ)", class:"col-md-3" %>
      <%= f.text_field :family_name_kana %>
      <%= f.label "(メイ)" %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="field">
      <%= f.label "メールアドレス", class:"col-md-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "郵便番号(ハイフンなし)", class:"col-md-3" %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label "郵便番号(ハイフンなし)", class:"col-md-3" %>
      <%= f.text_field :post_code %>
    </div>

    <div class="field">
      <%= f.label "住所", class:"col-md-3" %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label "電話番号", class:"col-md-3" %>
      <%= f.text_field :telephone %>
    </div>

    <div class="field">
      <%= f.label "パスワード", class:"col-md-3" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "パスワード(確認用)", class:"col-md-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

      <%= f.submit "Sign up",class: "btn btn-success" %>
    <% end %>

    <h2>既に登録済みの方</h2>
    <!--<= link_to こちら, ログインurl %> <p>からログインしてください</p>-->
    <%= link_to "こちら", "/customers/sign_in" %> からログインしてください。

        </div>
      </div>
    </div>

