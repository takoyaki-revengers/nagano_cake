<div class="container">
  <div class="row">
    <%= render "public/items/genre_search", genres: @genres %>

    <div class="col-md-8 sm-8 offset-md-1">
      <h1>商品一覧</h1>
      <% @items.each do |item| %>
       <div class="item">
         <%= image_tag item.image,size: "80,80" %>
         <%#= image_tag item.get_image(80,80) %><br>
         <%= item.name %><br>
         ¥<%= item.price %>-
       </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>



