<div class="container">
  <p><%= notice %></p>
  <div class="row">
    <%= render "public/items/genre_search", genres: @genres %>

    <div class="col-md-9 col-sm-9">
      <h4 class="bg-light text-center col-md-2 col-sm-2">商品一覧</h1>
      <div class="row">
           <% @items.each do |item| %>
           <div class="col-md-3 col-sm-3">
            <%= link_to item_path(item.id) do %>
                <%#= image_tag item.get_image(140,120) %><br>
                <%= image_tag item.image, size:"160x120" %><br>
            <% end %>
             <%= item.name %><br>
             ¥<%= item.price.to_s(:delimited) %>-
           </div>
          <% end %>
      </div>
      <div class="row">
        <div class="mx-auto mt-3">
        <%= paginate @items %>
      </div>

    </div>
  </div>
</div>



